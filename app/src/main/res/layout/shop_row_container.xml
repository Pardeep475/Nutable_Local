<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shop_cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/shop_photo"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_margin="0dp"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="0dp"
        android:background="@drawable/gradient_for_bg" >
        <TextView
            android:id="@+id/cat_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/space_1"
            android:paddingRight="@dimen/space_1"
            android:layout_marginTop="@dimen/space_3"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@android:color/white"
            android:textSize="@dimen/body1" />
        <TextView
            android:id="@+id/sub_cat_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_1"
            android:paddingLeft="@dimen/space_1"
            android:paddingRight="@dimen/space_1"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/cat_count"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@android:color/white"
            android:textSize="@dimen/body1" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/shop_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/space_1"
            android:paddingRight="@dimen/space_1"
            android:text="@string/shop_name"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@android:color/white"
            android:textSize="@dimen/title" />

        <TextView
            android:id="@+id/shop_desc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_1"
            android:paddingLeft="@dimen/space_1"
            android:paddingRight="@dimen/space_1"
            android:textColor="@color/textColor"
            android:layout_marginBottom="@dimen/space_1"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_location_white"
            android:lineSpacingMultiplier = "1.15"
            android:fontFamily="@font/montserrat_regular"
            android:text="@string/cheese_ipsum"
            android:textSize="@dimen/caption" />

        <Button
            android:textColor="@android:color/white"
            android:layout_width="@dimen/space_15"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_reservation_white"
            android:id="@+id/shop_reservation"
            android:text="Reservation"
            android:visibility="gone"
            android:layout_gravity="center_horizontal" />


    </LinearLayout>



</RelativeLayout>





